<div class="field_2">
<h3>投稿詳細</h3>
</div>

<div class="post1">
  <p>Name: <%= @post.name %></p><br>
  <p>Content: <br><%= @post.about %></p><br>
  <p>Tag: <%= @post.genre %></p>
  <% @post.tags.each do |tag| %>
    <span><%= tag.name %></span><br>
  <% end %>
  <br><p>Date: <br><%= @post.created_at %></p>
</div>

<div class="comment-wrapper">
  <p>コメント一覧</p><br>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <li><%= f.text_area :content, class: "text", style: "width:100%", rows: "5" %></li>
        <br>
        <%= button_tag type: "submit" do %>
        <span>投稿</span>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="field_3">
<%= link_to "一覧に戻る", posts_path, class: "ichiran" %>
</div>